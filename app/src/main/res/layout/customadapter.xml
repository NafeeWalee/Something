<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/adapterimage"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/rainbow_poop" />

    <TextView
        android:id="@+id/adaptertext1"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/adaptertext3" />

    <TextView
        android:id="@+id/adaptertext2"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/adaptertext3"
        android:layout_below="@+id/adaptertext1"
        android:text="TextView" />

    <TextView
        android:id="@+id/adaptertext3"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/adapterimage"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="TextView" />
</RelativeLayout>