<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/gradient_test">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Update Employee"
        android:textAlignment="center"

        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Edit Name"
        android:textAlignment="center"

        android:textStyle="bold" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employee Name"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:id="@+id/update_name"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Edit Salary"
        android:textAlignment="center"
        android:textStyle="bold" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employee Salary"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:id="@+id/update_salary"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/user"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:entries="@array/something">

    </Spinner>

    <Button
        android:id="@+id/button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:text="Update"
        android:textColor="@color/colorNew2"
        android:background="@drawable/btn_bg"/>

</LinearLayout>